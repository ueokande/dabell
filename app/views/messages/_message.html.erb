<li class='message <%= "unread" if local_assigns[:broadcast] || message.unread?(current_user) %>'>
  <%= image_tag message.user.avatar.url, class: 'avatar' %>
  <p class='created_at'><%= message.created_at.strftime('%Y-%m-%d %H:%M') %></p>
  <p class='full_name_and_name'>
    <span class='full_name'><%= message.user.full_name%></span>
    -
    <span class='name'><%= message.user.name%></span>
  </p>
  <p class='text'><%== format(message.text) %></p>
</li>
