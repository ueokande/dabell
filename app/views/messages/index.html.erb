<div id='timeline_area' class='timeline_area'></div>
<%= form_tag(messages_path(format: 'json'), method: :post, remote: true, id: 'message_post_form', class: 'message_post_form') do |f| %>
  <%= hidden_field_tag 'message[user_id]', current_user.id %>
  <%= text_area :message, :text, placeholder: 'Press Ctrl + Enter to post it', id: 'message_area' %>
  <%= submit_tag 'Post' %>
<% end  %>
